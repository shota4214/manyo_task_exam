  <%= form_with(model: @user, local: true, url: admin_user_path) do |form| %>
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "つのエラー") %> があるので<%= @user.name %> 情報の更新ができません</h2>
                <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class="field">
              <%= form.label :name %>
              <%= form.text_field :name %>
            </div><br>
            <div class="field">
              <%= form.label :email %>
              <%= form.email_field :email %>
            </div><br>
              <%= form.label :admin %>
              <%= form.select :admin, [["なし", "false"],["あり", "true"]],include_blank: "選択" %>
            <div class="field">
              <%= form.label :password %>
              <%= form.password_field :password %>
            </div><br>
            <div class="field">
              <%= form.label :password_confirmation %>
              <%= form.password_field :password_confirmation %>
            </div><br>
            <div class="actions">
              <%= form.submit %>
            </div>
            <% end %>
            <%= link_to 'ユーザー一覧', admin_users_path, class: "btn btn-outline-info" %>